{% extends '@Config/layout.html.twig' %}
{% block title %}{{ 'setting_title' | trans }}{% endblock %}
{% block body %}
    {% form_theme form '@User/Common/custom_errors.html.twig' %}
    <h2>{{ 'config' | trans }}</h2>
    <div class="col-xs-6 col-sm-6 col-md-2">
        {{ form_start(form, {
            'action': path('config_config_save'),
            'method': 'POST'
        })  }}

        {{ form_errors(form.history_limit   ) }}
        {{ form_label(form.history_limit) }}
        {{ form_widget(form.history_limit, {
            'attr': {
                'class': 'form-control',
                'value': data.history_limit.value
            }
        }) }}


        {{ form_row(form.schedule_feed) }}

        <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
        {{ form_end(form) }}

    </div>
    <script>
        var element = $('#configs_schedule_feed_{{ data.schedule_feed.value }}');
        element.attr("checked", true);
    </script>

{% endblock %}

