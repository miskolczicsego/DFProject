{% extends 'UserBundle::layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/user/css/register.css') }}" />
{% endblock %}
{% block title %}{{ 'registration.title' | trans }}{% endblock %}

{% form_theme form '@User/Common/custom_errors.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                {{ form_start(form)}}
                <h2 class="title">{{ 'registration.title' | trans }}</h2>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            {{ form_errors(form.firstname) }}
                            {{ form_widget(form.firstname, {'attr': {'placeholder': 'form.firstname' | trans} }) }}
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            {{ form_errors(form.lastname) }}
                            {{ form_widget(form.lastname, {'attr': {'placeholder': 'form.lastname' | trans} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {'attr': {'placeholder': 'form.username' | trans ~ '*' } }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'placeholder': 'form.email' | trans ~ '*'} }) }}
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        {{ form_errors(form.plainPassword) }}
                        <div class="form-group">
                            {{ form_row(form.plainPassword.first, {'label': ' ', 'attr': {'placeholder': 'form.password' | trans ~ '*'} }) }}
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            {{ form_row(form.plainPassword.second, {'label': ' ', 'attr': {'placeholder': 'form.repeatpassword' | trans ~ '*'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}